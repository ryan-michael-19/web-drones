    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "env": {
                "GO111MODULE": "on",
                // These MUST match the .env file...
                "POSTGRES_USER": "user",
                "POSTGRES_PASSWORD": "password",
                "POSTGRES_DB": "webdrones",
                // ...except for this
                "DB_HOSTNAME": "localhost",
                "SESSION_KEY": "From launch.json INSECURE"
            },
            "args": ["SERVER"]

        },
        {
            "name": "Unit Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/tests/unit_test.go",
            "env": {
                "GO111MODULE": "on"
            },
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Game Tester",
            "program": "${workspaceFolder}/functional_testing/run_game.ts",
            "args": ["single"],
            "preLaunchTask": "ts build",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/functional_testing/dist/**/*.js"]
        }
    ]
}